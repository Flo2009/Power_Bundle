
  <main class="text-green container mt-5">
    <h1 class="mb-4">Shopping Cart</h1>
    {{#if product.length}}
      <ul class="list-group mb-4">
        {{#each product}}
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <h5>{{this.name}}</h5>
              <p>{{this.description}}</p>
              <p>Price: ${{this.price}}</p>
              <p>Quantity: {{this.order_product.quantity}}</p>
            </div>
            <button class="btn btn-green remove-from-cart" data-id="{{this.id}}">Remove</button>
          </li>
        {{/each}}
      </ul>
      <div class="mt-3">
        {{!-- <h3>Total: ${{order.total_amount}}</h3> --}}
        <button class="btn btn-primary" id="checkout">Proceed to Checkout</button>
      </div>
    {{else}}
      <div class="alert alert-info" role="alert">
        Your cart is empty.
      </div>
    {{/if}}
  </main>
  
