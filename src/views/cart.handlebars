<<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>PowerBundle - Cart</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="./css/style.css"> 
  <style>
    /* New custom styles for the green theme */
    body {
      background-color: #d4edda; /* Light green background */
    }
    .text-green {
      color: #155724; /* Dark green text */
    }
    .btn-green {
      background-color: #28a745;
      color: white;
      border-color: #28a745;
    }
    .btn-green:hover {
      background-color: #218838;
      color: white;
      border-color: #1e7e34;
    }
    .btn-green:focus, .btn-green:active {
      background-color: #1e7e34;
      color: white;
      border-color: #1c7430;
    }
  </style>

</head>
<body class="text-green">
  <header class="bg-light py-3">
    <nav class="container d-flex flex-wrap justify-content-between">
      <ul class="nav">
        <li class="nav-item">
          <a class="nav-link" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/mix-bundles">Mix Bundles</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/energy-drinks">Energy Drinks</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/healthy-snacks">Healthy Snacks</a>
        </li>
      </ul>
      <div class="d-flex">
        <a class="nav-link" href="/login">Login/Create account</a>
        <a class="nav-link" href="/cart">Cart</a>
      </div>
    </nav>
  </header>
  <main class="container mt-5">
    <h1 class="mb-4">Shopping Cart</h1>
    {{#if order.products.length}}
      <ul class="list-group mb-4">
        {{#each order.products}}
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <h5>{{this.name}}</h5>
              <p>{{this.description}}</p>
              <p>Price: ${{this.price}}</p>
              <p>Quantity: {{this.order_product.quantity}}</p>
            </div>
            <button class="btn btn-green remove-from-cart" data-id="{{this.id}}">Remove</button>
          </li>
        {{/each}}
      </ul>
      <div class="mt-3">
        <h3>Total: ${{order.total_amount}}</h3>
        <button class="btn btn-primary" id="checkout">Proceed to Checkout</button>
      </div>
    {{else}}
      <div class="alert alert-info" role="alert">
        Your cart is empty.
      </div>
    {{/if}}
  </main>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script>
