  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const loginTemplateSource = document.getElementById('login-template').innerHTML;
      const signupTemplateSource = document.getElementById('signup-template').innerHTML;

      const loginTemplate = Handlebars.compile(loginTemplateSource);
      const signupTemplate = Handlebars.compile(signupTemplateSource);

      document.getElementById('login-container').innerHTML = loginTemplate();
      document.getElementById('signup-container').innerHTML = signupTemplate();
    });
  </script>
