<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>PowerBundle - Login/Signup</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css"> <!-- Correct path to the CSS file -->
  <style>
    /* Custom styles for the green theme */
    body {
      background-color: #d4edda; /* Light green background */
    }
    .text-green {
      color: #155724; /* Dark green text */
    }
    .btn-green {
      background-color: #28a745;
      color: white;
      border-color: #28a745;
    }
    .btn-green:hover {
      background-color: #218838;
      color: white;
      border-color: #1e7e34;
    }
    .btn-green:focus, .btn-green:active {
      background-color: #1e7e34;
      color: white;
      border-color: #1c7430;
    }
    .form-container {
      background-color: #a5d6a7; /* Light green container */
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      margin-bottom: 20px;
    }
    .form-input {
      width: 100%;
      padding: 10px;
      margin-bottom: 15px;
      border: 1px solid #81c784; /* Green border for input fields */
      border-radius: 5px;
      box-sizing: border-box;
    }
    .form-group label {
      color: #2e7d32; /* Medium green for labels */
    }
  </style>
</head>
<body class="text-green">
  <header class="bg-light py-3">
    <nav class="container d-flex flex-wrap justify-content-between">
      <ul class="nav">
        <li class="nav-item">
          <a class="nav-link" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/mix-bundles">Mix Bundles</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/energy-drinks">Energy Drinks</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/healthy-snacks">Healthy Snacks</a>
        </li>
      </ul>
      <div class="d-flex">
        <a class="nav-link" href="/login">Login/Create account</a>
        <a class="nav-link" href="/cart">Cart</a>
      </div>
    </nav>
  </header>
  <main class="container mt-5">
    <div id="login-container" class="form-container"></div>
    <div id="signup-container" class="form-container"></div>
  </main>
  
  <script id="login-template" type="text/x-handlebars-template">
    <div class="col-md-6 mx-auto">
      <h2 class="text-green">Login</h2>
      <form class="form login-form">
        <div class="form-group">
          <label for="email-login">Email:</label>
          <input class="form-input" type="text" id="email-login" />
        </div>
        <div class="form-group">
          <label for="password-login">Password:</label>
          <input class="form-input" type="password" id="password-login" />
        </div>
        <div class="form-group">
          <button class="btn btn-green" type="submit">Login</button>
        </div>
      </form>
    </div>
  </script>

  <script id="signup-template" type="text/x-handlebars-template">
    <div class="col-md-6 mx-auto">
      <h2 class="text-green">Sign Up</h2>
      <form class="form signup-form">
        <div class="form-group">
          <label for="name-signup">Name:</label>
          <input class="form-input" type="text" id="name-signup" />
        </div>
        <div class="form-group">
          <label for="email-signup">Email:</label>
          <input class="form-input" type="text" id="email-signup" />
        </div>
        <div class="form-group">
          <label for="password-signup">Password:</label>
          <input class="form-input" type="password" id="password-signup" />
        </div>
        <div class="form-group">
          <button class="btn btn-green" type="submit">Sign Up</button>
        </div>
      </form>
    </div>
  </script>

  <script src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const loginTemplateSource = document.getElementById('login-template').innerHTML;
      const signupTemplateSource = document.getElementById('signup-template').innerHTML;

      const loginTemplate = Handlebars.compile(loginTemplateSource);
      const signupTemplate = Handlebars.compile(signupTemplateSource);

      document.getElementById('login-container').innerHTML = loginTemplate();
      document.getElementById('signup-container').innerHTML = signupTemplate();
    });
  </script>
</body>
</html>